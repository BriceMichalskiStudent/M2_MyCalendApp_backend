{
  "name": "node_core",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "express": "^4.17.1",
    "express-status-monitor": "^1.3.3",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "mongoose": "^5.10.15",
    "nodemon": "^2.0.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/express-status-monitor": "^1.2.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.1",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "standardx": "^7.0.0"
  },
  "scripts": {
    "tsc": "node ./node_modules/typescript/bin/tsc",
    "build": "npm install && node ./node_modules/typescript/bin/tsc",
    "start": "node dist/server.js",
    "launch": "node ./node_modules/typescript/bin/tsc && node dist/server.js",
    "watch": "nodemon --exec ts-node server.ts",
    "lint": "standardx './**/*.ts'",
    "lint-fix": "standardx --fix './**/*.ts'"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "no-useless-constructor": "off",
      "@typescript-eslint/no-useless-constructor": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
